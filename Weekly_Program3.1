#include <stdio.h>
#include <math.h>

int main ()
{
    float a, b, c;
    printf("Please enter triangle side a, b, c : ");
    scanf("%f %f %f", &a, &b, &c);
    float s = (a+b+c)/2;
    float area = sqrt(s*(s-a)*(s-b)*(s-c));
    if( a+b > c && a+c > b && b+c > a ){
      printf("This triangle area is %.3f units.", area);
    }
    else{
      printf("0");
    }
    return 0;

}
