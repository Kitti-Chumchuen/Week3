#include <stdio.h>
#include <math.h>

int main ()
{
    float num[20];
    printf("Please enter triangle side a, b, c : ");
    scanf("%f %f %f", &num[1], &num[2], &num[3]);
    float s = (num[1]+num[2]+num[3])/2;
    float area = sqrt(s*(s-num[1])*(s-num[2])*(s-num[3]));
    if( num[1]+num[2] > num[3] && num[1]+num[3] > num[2] && num[2]+num[3] > num[1] ){
      printf("This triangle area is %.3f units.", area);
    }
    else{
      printf("0");
    }
    return 0;
}
